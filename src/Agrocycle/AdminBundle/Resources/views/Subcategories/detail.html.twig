{% block body %}
<div class="row">
<article class="span12 data-block">
    <div class="data-container">
        <header>
                <h2><a href="{{path('agrocycle_admin_category_index')}}">CategorieÃ«n</a> &raquo; <a  href="{{path('agrocycle_admin_category_detail', {'id': subcategory.category.id, 'slug': subcategory.category.slug})}}">{{subcategory.category.title}}</a> &raquo; {{subcategory.title}}</h2>
                
                <ul class="data-header-actions">
                    <li><a  href="{{path('agrocycle_admin_category_detail', {'id': subcategory.category.id, 'slug': subcategory.category.slug})}}"><span class="awe-arrow-left"></span> Terug naar overzicht</a></li>
